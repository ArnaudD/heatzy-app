{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["./src/*"]
}
